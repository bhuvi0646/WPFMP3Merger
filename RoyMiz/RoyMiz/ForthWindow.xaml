        xmlns:local="clr-namespace:RoyMiz"
        mc:Ignorable="d"
              Title="RoyMiz" Height="450" Width="800" Background="#ebdb34" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

    <Grid>
        <Button x:Name="DownloadButton"  Content="Download
" HorizontalAlignment="Center"   
