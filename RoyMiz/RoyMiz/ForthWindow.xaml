                RenderTransformOrigin="1.047,0.821" Height="40" FontWeight="Bold" FontSize="20" Click="DownloadButton_Click" />
        <Button x:Name="PlayButton"  Content="Play
" HorizontalAlignment="Center"   
                Margin="263,177,309,204" VerticalAlignment="Center"  Width="222" 
                RenderTransformOrigin="1.047,0.821" Height="40" FontWeight="Bold" FontSize="20" Click="PlayButton_Click" />
        <Button x:Name="StopButton" Visibility="Hidden"  Content="Stop
" HorizontalAlignment="Center"   
                Margin="263,177,309,204" VerticalAlignment="Center"  Width="222" 
                RenderTransformOrigin="1.047,0.821" Height="40" FontWeight="Bold" FontSize="20" Click="StopButton_Click" />

    </Grid>
